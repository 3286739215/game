<select id="selectGameByTime" resultMap="BlogResultMap">
  SELECT
	game.id,
	game.game_name,
	game.game_desc,
	gameurl.pic,
	gameurl.official_url,
	gameurl.downLoad_url,
	topic.create_time,
	topic.from_uid,
	`user`.user_name,
	topic.parent_id,
	topic.content
FROM
	game
	INNER JOIN
	gameurl
	ON
		game.game_url = gameurl.id
	LEFT JOIN
	topic
	ON
		game.id = topic.game_id
	INNER JOIN
	`user`
	ON
		topic.from_uid = `user`.user_id
WHERE
	topic.parent_id = 0
GROUP BY
	game.id
</select>
